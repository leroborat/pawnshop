<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Pawn Ticket Sequence -->
        <record id="seq_pawn_ticket" model="ir.sequence">
            <field name="name">Pawn Ticket Sequence</field>
            <field name="code">pawn.ticket</field>
            <field name="prefix">PT-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Note: Branch-specific sequences will be created programmatically
             when branches are created, using format: {BRANCH_CODE}-PT-{YYMMDD}-{####} -->

    </data>
</odoo>
