<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Rate Table List View -->
        <record id="view_pawn_rate_table_list" model="ir.ui.view">
            <field name="name">pawn.rate.table.list</field>
            <field name="model">pawn.rate.table</field>
            <field name="arch" type="xml">
                <list string="Rate Tables" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Rate Table Form View -->
        <record id="view_pawn_rate_table_form" model="ir.ui.view">
            <field name="name">pawn.rate.table.form</field>
            <field name="model">pawn.rate.table</field>
            <field name="arch" type="xml">
                <form string="Rate Table">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <field name="active" invisible="1"/>
                        <group>
                            <group>
                                <field name="name" placeholder="e.g., Standard Rates 2025"/>
                                <field name="code" placeholder="e.g., STD2025"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to" placeholder="Leave empty for indefinite"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            </group>
                        </group>
                        <group string="Applicable Branches">
                            <field name="branch_ids" nolabel="1" widget="many2many_tags"
                                   placeholder="Leave empty to apply to all branches"
                                   options="{'color_field': 'color', 'no_create': True}"/>
                        </group>
                        <notebook>
                            <page string="Rate Lines" name="rate_lines">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="category_id" options="{'no_create': True}"/>
                                        <field name="branch_id" options="{'no_create': True}"/>
                                        <field name="amount_from" widget="monetary"/>
                                        <field name="amount_to" widget="monetary"/>
                                        <field name="currency_id" column_invisible="1"/>
                                        <field name="rate_percent"/>
                                        <field name="rate_period"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" nolabel="1" placeholder="Additional information about this rate table..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Rate Table Search View -->
        <record id="view_pawn_rate_table_search" model="ir.ui.view">
            <field name="name">pawn.rate.table.search</field>
            <field name="model">pawn.rate.table</field>
            <field name="arch" type="xml">
                <search string="Search Rate Tables">
                    <field name="name" string="Rate Table"
                           filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                    <field name="branch_ids"/>
                    <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="filter_inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Currently Valid" name="filter_current_valid"
                            domain="[('date_from', '&lt;=', context_today().strftime('%Y-%m-%d')),
                                     '|', ('date_to', '=', False), ('date_to', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                        <filter string="Valid From" name="group_date_from" context="{'group_by': 'date_from'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Rate Table Action -->
        <record id="action_pawn_rate_table" model="ir.actions.act_window">
            <field name="name">Rate Tables</field>
            <field name="res_model">pawn.rate.table</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_filter_active': 1, 'search_default_filter_current_valid': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first rate table
                </p>
                <p>
                    Rate tables define interest rates based on loan amounts, item categories, and branches.
                    You can create tiered rates (e.g., 3% for amounts under 10,000, 2.5% for amounts over 10,000).
                </p>
            </field>
        </record>

    </data>
</odoo>
