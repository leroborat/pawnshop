<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_pawn_auction_invoice_wizard" model="ir.ui.view">
      <field name="name">pawn.auction.invoice.wizard.form</field>
      <field name="model">pawn.auction.invoice.wizard</field>
      <field name="arch" type="xml">
        <form string="Create Auction Invoice">
          <group>
            <group>
              <field name="line_id" readonly="1"/>
              <field name="ticket_id" readonly="1"/>
              <field name="currency_id" invisible="1"/>
            </group>
            <group>
              <field name="partner_id"/>
              <field name="price_unit"/>
              <field name="add_service_fee"/>
            </group>
          </group>
          <footer>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
            <button name="action_confirm" type="object" string="Create Invoice" class="btn-primary"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_pawn_auction_invoice_wizard" model="ir.actions.act_window">
      <field name="name">Auction Invoice</field>
      <field name="res_model">pawn.auction.invoice.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

  </data>
</odoo>
