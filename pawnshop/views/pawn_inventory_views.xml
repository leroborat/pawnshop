    <!-- Stock Move List View (Custody Tracking) -->
    <record id="view_stock_move_pawn_custody_list" model="ir.ui.view">
        <field name="name">stock.move.pawn.custody.list</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <list string="Items in Custody" create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="origin"/>
                <field name="pawn_ticket_id"/>
                <field name="product_id"/>
                <field name="pawn_line_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="product_uom_qty"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'done'"
                       decoration-info="state == 'assigned'"
                       decoration-warning="state == 'confirmed'"/>
            </list>
        </field>
    </record>

