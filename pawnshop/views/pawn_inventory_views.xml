    <!-- Pawn Ticket Line Kanban View (Forfeited Items) -->
    <record id="view_pawn_ticket_line_forfeited_kanban" model="ir.ui.view">
        <field name="name">pawn.ticket.line.forfeited.kanban</field>
        <field name="model">pawn.ticket.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false">
                <field name="name"/>
                <field name="category_id"/>
                <field name="brand"/>
                <field name="appraised_value"/>
                <field name="photo_1"/>
                <field name="state"/>
                <field name="ticket_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-if="record.photo_1.raw_value" 
                                     t-att-src="'data:image/png;base64,' + record.photo_1.raw_value" 
                                     alt="Item Photo"
                                     style="max-height: 100px; max-width: 100%;"/>
                                <div t-else="" class="o_kanban_image_placeholder"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="category_id"/>
                                    <t t-if="record.brand.raw_value"> - <field name="brand"/></t>
                                </div>
                                <div>
                                    Appraised: <field name="appraised_value" widget="monetary"/>
                                </div>
                                <div>
                                    Ticket: <field name="ticket_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- ACTIONS -->
    <!-- ============================================================ -->

    <!-- Action: Items in Custody -->
    <record id="action_pawn_items_in_custody" model="ir.actions.act_window">
        <field name="name">Items in Custody</field>
        <field name="res_model">pawn.ticket.line</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', 'in', ('pledged', 'renewed'))]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_pawn_ticket_line_inventory_list')}),
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No items in custody
            </p>
            <p>
                Items currently held as collateral will appear here.
            </p>
        </field>
    </record>

    <!-- Action: Forfeited Inventory -->
    <record id="action_pawn_forfeited_inventory" model="ir.actions.act_window">
        <field name="name">Forfeited Inventory</field>
        <field name="res_model">pawn.ticket.line</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'forfeited')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_pawn_ticket_line_forfeited_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_pawn_ticket_line_inventory_list')}),
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No forfeited items
            </p>
            <p>
                Items that have been forfeited and are now company property will appear here.
                These items are ready for auction or sale.
            </p>
        </field>
    </record>

    <!-- Action: Stock Moves (Custody Tracking) -->
    <record id="action_pawn_stock_moves_custody" model="ir.actions.act_window">
        <field name="name">Custody Movements</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('pawn_line_id', '!=', False), ('state', '=', 'done')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_stock_move_pawn_custody_list')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_stock_move_pawn_custody_kanban')}),
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No inventory movements
            </p>
            <p>
                All inventory movements related to pawn operations will appear here.
            </p>
        </field>
    </record>

    <!-- Action: All Pawn Inventory Movements -->
    <record id="action_pawn_inventory_all_moves" model="ir.actions.act_window">
        <field name="name">All Pawn Inventory</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('pawn_line_id', '!=', False), ('state', '=', 'done')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_stock_move_pawn_custody_list')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_stock_move_pawn_custody_kanban')}),
        ]"/>
    </record>

</odoo>
