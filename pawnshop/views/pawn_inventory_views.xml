    <!-- Stock Move Kanban View (Custody Items) -->
    <record id="view_stock_move_pawn_custody_kanban" model="ir.ui.view">
        <field name="name">stock.move.pawn.custody.kanban</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false" edit="false" delete="false">
                <field name="product_id"/>
                <field name="pawn_ticket_id"/>
                <field name="pawn_line_id"/>
                <field name="date"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="product_id"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        Ticket: <field name="pawn_ticket_id"/>
                                    </div>
                                </div>
                                <span class="badge badge-pill">
                                    <field name="state" widget="badge"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="location_dest_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- PAWN TICKET LINE VIEWS (Inventory Perspective) -->
    <!-- ============================================================ -->

    <!-- Pawn Ticket Line List View (Inventory) -->
    <record id="view_pawn_ticket_line_inventory_list" model="ir.ui.view">
        <field name="name">pawn.ticket.line.inventory.list</field>
        <field name="model">pawn.ticket.line</field>
        <field name="arch" type="xml">
            <list string="Pawned Items Inventory" create="false" edit="false">
                <field name="ticket_id"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="brand"/>
                <field name="serial_number"/>
                <field name="appraised_value" widget="monetary"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'redeemed'"
                       decoration-danger="state == 'forfeited'"
                       decoration-info="state in ('pledged', 'renewed')"/>
                <field name="branch_id"/>
                <field name="barcode"/>
            </list>
        </field>
    </record>

