<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Root Menu -->
        <menuitem id="menu_pawnshop_root"
                  name="Pawnshop"
                  sequence="10"
                  web_icon="pawnshop,static/description/icon.png"
                  groups="group_pawn_cashier"/>

        <!-- Main Menus -->
        <menuitem id="menu_pawnshop_operations"
                  name="Operations"
                  parent="menu_pawnshop_root"
                  sequence="10"/>

        <menuitem id="menu_pawnshop_inventory"
                  name="Inventory"
                  parent="menu_pawnshop_root"
                  sequence="20"/>

        <menuitem id="menu_pawnshop_reports"
                  name="Reports"
                  parent="menu_pawnshop_root"
                  sequence="30"
                  groups="group_pawn_manager,group_pawn_accountant"/>

        <menuitem id="menu_pawnshop_configuration"
                  name="Configuration"
                  parent="menu_pawnshop_root"
                  sequence="90"
                  groups="group_pawn_admin"/>

        <!-- Operations Submenus -->
        <menuitem id="menu_pawnshop_ticket"
                  name="Pawn Tickets"
                  parent="menu_pawnshop_operations"
                  action="action_pawn_ticket"
                  sequence="10"/>

        <menuitem id="menu_pawnshop_ticket_active"
                  name="Active Tickets"
                  parent="menu_pawnshop_operations"
                  action="action_pawn_ticket"
                  sequence="11"/>

        <menuitem id="menu_pawnshop_ticket_due_today"
                  name="Due Today"
                  parent="menu_pawnshop_operations"
                  action="action_pawn_ticket"
                  sequence="12"/>

        <menuitem id="menu_pawnshop_ticket_overdue"
                  name="Overdue"
                  parent="menu_pawnshop_operations"
                  action="action_pawn_ticket"
                  sequence="13"/>

        <!-- Inventory Submenus -->
        <menuitem id="menu_pawnshop_custody"
                  name="Items in Custody"
                  parent="menu_pawnshop_inventory"
                  action="action_pawn_items_in_custody"
                  sequence="10"/>

        <menuitem id="menu_pawnshop_forfeited"
                  name="Forfeited Inventory"
                  parent="menu_pawnshop_inventory"
                  action="action_pawn_forfeited_inventory"
                  sequence="20"/>

        <menuitem id="menu_pawnshop_stock_moves"
                  name="Custody Movements"
                  parent="menu_pawnshop_inventory"
                  action="action_pawn_stock_moves_custody"
                  sequence="30"
                  groups="group_pawn_manager,group_pawn_admin"/>

        <menuitem id="menu_pawnshop_auction"
                  name="Auction Staging"
                  parent="menu_pawnshop_inventory"
                  sequence="40"/>
                  <!-- Auction action will be added in Phase 5 -->

        <!-- Configuration Submenus -->
        <menuitem id="menu_pawnshop_config_branches"
                  name="Branches"
                  parent="menu_pawnshop_configuration"
                  action="action_pawn_branch"
                  sequence="10"
                  groups="group_pawn_admin"/>

        <menuitem id="menu_pawnshop_config_categories"
                  name="Item Categories"
                  parent="menu_pawnshop_configuration"
                  action="action_pawn_item_category"
                  sequence="20"
                  groups="group_pawn_admin"/>

        <menuitem id="menu_pawnshop_config_rates"
                  name="Rate Tables"
                  parent="menu_pawnshop_configuration"
                  action="action_pawn_rate_table"
                  sequence="30"
                  groups="group_pawn_admin"/>

        <menuitem id="menu_pawnshop_config_settings"
                  name="Settings"
                  parent="menu_pawnshop_configuration"
                  action="action_pawn_config_settings"
                  sequence="90"
                  groups="group_pawn_admin"/>

    </data>
</odoo>
