<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Branch List View -->
        <record id="view_pawn_branch_list" model="ir.ui.view">
            <field name="name">pawn.branch.list</field>
            <field name="model">pawn.branch</field>
            <field name="arch" type="xml">
                <list string="Branches" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="city"/>
                    <field name="manager_id" widget="many2one_avatar_user"/>
                    <field name="warehouse_id"/>
                    <field name="ticket_count" string="Active Tickets"/>
                    <field name="due_today_count" string="Due Today"/>
                    <field name="overdue_count" string="Overdue"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Branch Form View -->
        <record id="view_pawn_branch_form" model="ir.ui.view">
            <field name="name">pawn.branch.form</field>
            <field name="model">pawn.branch</field>
            <field name="arch" type="xml">
                <form string="Branch">
                    <header>
                        <button name="%(action_pawn_ticket)d"
                                type="action"
                                string="New Ticket"
                                class="btn-primary"
                                context="{'default_branch_id': id}"
                                groups="pawnshop.group_pawn_cashier"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_tickets"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-ticket">
                                <field name="ticket_count" widget="statinfo" string="Active Tickets"/>
                            </button>
                            <button name="action_view_due_today"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-calendar-check-o">
                                <field name="due_today_count" widget="statinfo" string="Due Today"/>
                            </button>
                            <button name="action_view_overdue"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-exclamation-triangle">
                                <field name="overdue_count" widget="statinfo" string="Overdue"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <field name="active" invisible="1"/>
                        <group>
                            <group>
                                <field name="name" placeholder="e.g., Manila Main Branch"/>
                                <field name="code" placeholder="e.g., MNL01"/>
                                <field name="sequence"/>
                                <field name="manager_id" widget="many2one_avatar_user"/>
                            </group>
                            <group>
                                <field name="warehouse_id"
                                       required="1"
                                       options="{'no_create': True}"/>
                                <field name="company_id"
                                       groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Address" name="address">
                                <group>
                                    <group>
                                        <field name="street" placeholder="Street..."/>
                                        <field name="street2"/>
                                        <field name="city" placeholder="City"/>
                                        <field name="state_id"
                                               options="{'no_open': True, 'no_create': True}"/>
                                        <field name="zip"/>
                                        <field name="country_id"
                                               options="{'no_open': True, 'no_create': True}"/>
                                    </group>
                                    <group>
                                        <field name="phone" widget="phone"/>
                                        <field name="email" widget="email"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Branch Kanban View -->
        <record id="view_pawn_branch_kanban" model="ir.ui.view">
            <field name="name">pawn.branch.kanban</field>
            <field name="model">pawn.branch</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="city"/>
                    <field name="manager_id"/>
                    <field name="ticket_count"/>
                    <field name="due_today_count"/>
                    <field name="overdue_count"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card_content">
                                <div class="oe_kanban_global_click">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="code"/> - <field name="city"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="manager_id" widget="many2one_avatar_user"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="badge text-bg-info">
                                                <i class="fa fa-ticket"/> <field name="ticket_count"/> Active
                                            </span>
                                            <span class="badge text-bg-warning" invisible="due_today_count == 0">
                                                <i class="fa fa-calendar"/> <field name="due_today_count"/> Due
                                            </span>
                                            <span class="badge text-bg-danger" invisible="overdue_count == 0">
                                                <i class="fa fa-exclamation"/> <field name="overdue_count"/> Overdue
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Branch Search View -->
        <record id="view_pawn_branch_search" model="ir.ui.view">
            <field name="name">pawn.branch.search</field>
            <field name="model">pawn.branch</field>
            <field name="arch" type="xml">
                <search string="Search Branches">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="city"/>
                    <field name="manager_id"/>
                    <group>
                        <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                        <filter string="Archived" name="filter_inactive" domain="[('active', '=', False)]"/>
                    </group>
                    <group>
                        <filter string="Manager" name="group_manager" context="{'group_by':'manager_id'}"/>
                        <filter string="City" name="group_city" context="{'group_by':'city'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Branch Action -->
        <record id="action_pawn_branch" model="ir.actions.act_window">
            <field name="name">Branches</field>
            <field name="res_model">pawn.branch</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first branch
                </p>
                <p>
                    Set up branches to manage multiple pawnshop locations.
                    Each branch has its own warehouse and generates unique ticket numbers.
                </p>
            </field>
        </record>

    </data>
</odoo>
